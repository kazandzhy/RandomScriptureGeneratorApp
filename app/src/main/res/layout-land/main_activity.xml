<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context="com.example.randomscripturegeneratorapp.MainActivity">


    <Button
        android:id="@+id/home_workfilter_button4"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_selector_yellow"
        android:onClick="goToFavoritesActivity"
        android:text="Favorites"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/randomWork_button2" />

    <Button
        android:id="@+id/home_workfilter_button7"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector_green"
        android:onClick="goToFilterBookActivity"
        android:text="Filter By Book"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/home_workfilter_button4"
        app:layout_constraintStart_toStartOf="@+id/home_workfilter_button6" />

    <Button
        android:id="@+id/home_workfilter_button6"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/button_selector_blue"
        android:onClick="goToFilterWorkActivity"
        android:text="Filter By Work"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/randomWork_button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/randomWork_button2"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_selector_red"
        android:onClick="sendVerseToDisplay"
        android:text="Random Scripture"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
