<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context="com.example.randomscripturegeneratorapp.MainActivity">

    <Button
        android:id="@+id/home_workfilter_button4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:onClick="goToFavoritesActivity"
        android:background="#eac67a"
        android:text="Favorites"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/randomWork_button2" />

    <Button
        android:id="@+id/home_workfilter_button7"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="goToFilterBookActivity"
        android:background="#4b874e"
        android:text="Filter By Book"
        app:layout_constraintBaseline_toBaselineOf="@+id/home_workfilter_button4"
        app:layout_constraintStart_toStartOf="@+id/home_workfilter_button6" />

    <Button
        android:id="@+id/home_workfilter_button6"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:onClick="goToFilterWorkActivity"
        android:background="#486872"
        android:text="Filter By work"
        app:layout_constraintBaseline_toBaselineOf="@+id/randomWork_button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/randomWork_button2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:onClick="sendVerseToDisplay"
        android:background="#af5e56"
        android:text="Random Scripture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
