<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context="com.example.randomscripturegeneratorapp.FilterBookActivity">

    <Button
        android:id="@+id/randomWork_button"
        android:layout_width="215dp"
        android:layout_height="123dp"
        android:layout_marginTop="88dp"
        android:onClick="sendVerseToDisplay"
        android:text="Random Scripture"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dropDown_works"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/settings_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dropDown_books"
        app:layout_constraintTop_toBottomOf="@+id/randomWork_button" />

    <Spinner
        android:id="@+id/dropDown_books"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:background="@color/settings_bg"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropDown_works" />

</android.support.constraint.ConstraintLayout>
