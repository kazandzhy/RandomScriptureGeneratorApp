<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.randomscripturegeneratorapp.ShowScriptureActivity">

    <Button
        android:id="@+id/home_ShowScripture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Home"
        android:onClick="goHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/scripture_text_view"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="randomizeAgain"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/scripture_text_view"
        app:srcCompat="@android:drawable/ic_popup_sync"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="openBrowser"
        app:layout_constraintStart_toEndOf="@+id/scripture_title_view"
        app:layout_constraintTop_toBottomOf="@+id/scripture_text_view"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/scripture_title_view"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:text="Scripture Title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/scripture_text_view"
        app:layout_constraintTop_toBottomOf="@+id/scripture_text_view" />

    <TextView
        android:id="@+id/scripture_text_view"
        android:layout_width="256dp"
        android:layout_height="277dp"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="4sp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/debug"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/scripture_text_view"
        app:layout_constraintStart_toStartOf="@+id/scripture_title_view"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />


</android.support.constraint.ConstraintLayout>
